<% posts.each do |post| %>
  <div class="card col-md-6 offset-md-3 col-lg-8 offset-lg-2 mt-4 shadow-lg">
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag post.user.get_profile_image(100,100), class: "mt-3 rounded-circle" %>
          <div style="margin-top:10px; height:75px;"><i class="fas fa-user"></i> By </br><%= link_to post.user.name, user_path(post.user) %></div>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to post_path(post.id), class: "text-dark", style: "font-size: 1.2rem;" do %>
              <strong><i class="far fa-flag"></i><span> <%= post.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">本文：<%= post.body %></p>
          <p class="card-text">業界：<%= post.industry %></p>
          <p class="card-text">カテゴリー：<%= post.category %></p>
          <span id="favorite_btn_<%= post.id %>"><%= render "user/favorites/btn", post: post %> | </span>
          <span><i class="fa-solid fa-comment"></i> <%= link_to "#{post.post_comments.count} 件", post_path(post.id), class: "text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
<% end %>