<div class="new_posts">
  <h1>編集画面</h1>
  
  <%= form_with model: @post do |f| %>
    <div class="f-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
  
      <div class="f-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control", rows: 5 %>
      </div>
  
      <div class="f-group">
        <%= f.label :industry %>
        <%= f.text_field :industry, class: "form-control" %>
      </div>
  
      <div class="f-group", style= "margin-bottom: 10px;" >
        <%= f.label :category %>
        <%= f.text_field :category, class: "form-control" %>
      </div>
    
    <%= f.submit '保存' %><%= link_to "戻る", post_path(@post.id), class: "btn btn-secondary", style: "margin-left: 5px; padding: 0.3rem 0.5rem; font-size: 1rem;" %>
    
  <% end %>
</div>