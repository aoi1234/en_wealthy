<h1>編集画面</h1>

<%= form_with model: @post do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_field :body %>

  <h4>業種</h4>
  <%= f.text_field :industry %>

  <h4>カテゴリー</h4>
  <%= f.text_field :category %>
  
  <%= f.submit '保存' %><%= link_to "戻る", post_path(@post.id), class: "btn btn-secondary", style: "margin-left: 5px; padding: 0.3rem 0.5rem; font-size: 1rem;" %>
  
<% end %>