<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-secondary", style: "margin-left: 5px; padding: 0.3rem 0.5rem; font-size: 1rem;" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-secondary", style: "margin-left: 5px; padding: 0.3rem 0.5rem; font-size: 1rem;" %>
  <% end %>
<% end %>