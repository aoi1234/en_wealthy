<h1>プロフィール編集</h1>
<!-- form_with部分 -->
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>プロフィール編集</h1>
      <%= form_with model: @user, method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :name, "名前" %>
          <%= f.text_field :name,class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "自己紹介" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "保存", class: "btn btn-success" %>
        </div>
      <% end %>

      <%= link_to "戻る", user_path(@user), class: "btn btn-secondary", style: "padding: 0.5rem 1rem; font-size: 1.4rem;" %>
      |
      <%= link_to "ポスト一覧", posts_path, class: "btn btn-secondary", style: "padding: 0.5rem 1rem; font-size: 1.4rem;" %>
      <div style="margin-top: 10px;">
        <%= link_to "退会", user_path(current_user.id), method: :delete, data: { confirm: "本当に退会しますか？" }, class: "btn btn-secondary", style: "padding: 0.5rem 1rem; font-size: 1.4rem;" %>
      </div>
    </div>
  </div>
</div>