<h1>マイページ</h1>
<h4>プロフィール</h4>
<%= image_tag @user.get_profile_image(100,100) %>
<table class="table">
 <tbody>
    <tr></tr>
    <tr>
      <th scope="row">名前</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th scope="row">自己紹介</th>
      <td><%= @user.introduction %></td>
    </tr>
  </tbody>
</table>

<div class="row">
  <% if user_signed_in? && @user == current_user %>
    <% unless current_user.name == "test" %>
      <%= link_to edit_user_path(@user), class: "btn btn-block btn-outline-secondary" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    <% end %>
  <% end %>
</div>

<h4>投稿一覧</h4>
<% if @posts.present? %>
  <% @posts.each do |post| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%#= image_tag post_image.user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(post_path(post.id), class: "text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= post.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">本文：<%= post.body %></p>
          <p class="card-text">業界：<%= post.industry %></p>
          <p class="card-text">カテゴリー：<%= post.category %></p>
          <span><i class="fas fa-user"></i> By <%= post.user.name %> ｜ </span>
          <span><%#= link_to "#{post.post_comments.count} コメント", post_path(post.id), class: "text-dark" %></span>
          <td><%= render "user/favorites/btn", post: post %></td>
          <td>コメント数： <%= post.post_comments.count %></td>
        </div>
      </div>
    </div>
  </div>
  <% end %>
<% else %>
  <p>投稿が見つかりません。</p>
<% end %>