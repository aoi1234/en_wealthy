<table>
  <tbody>
    <% post.post_comments.each do |post_comment| %>
      <tr>
        <td>
          <%= link_to admin_user_path(post_comment.user) do %>
            <%= image_tag post_comment.user.get_profile_image(50, 50), class: "rounded-circle" %><br>
            <%= post_comment.user.name %>
          <% end %>
        </td>
        <td>
          <div style="margin-left: 5px;"><%= post_comment.comment %></div>
        </td>
        <td>
          <div style="margin-left: 20px;">
            <%= link_to "コメント削除", admin_post_post_comment_path(post, post_comment), 
                        data: { confirm: "本当に削除して宜しいですか？" }, 
                        method: :delete, 
                        class: "btn btn-secondary", 
                        style: "padding: 0.1rem 0.5rem; font-size: 1rem;" %>
          </div>
          <small class="text-muted"><%= post_comment.created_at.strftime("%Y/%m/%d %H:%M") %></small>
        </td>
      </tr>
    <% end %>
</tbody>
</table>