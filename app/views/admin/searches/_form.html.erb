<% if admin_signed_in? %>
  <%= form_with url: admin_searches_search_path, method: :get, local: true do |f| %>
    <div class="input-group" style="width: 35rem; margin: 0 auto;">
      <%= f.text_field :keyword, value: params[:keyword], class: "form-control", placeholder: "キーワードやクリエイターで検索", aria_label: "キーワードやクリエイターで検索" %>
      <%= f.select :model, options_for_select({"User" => "user", "Post" => "post"}, params[:model]) %>
      <%= f.select :method, options_for_select({"完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial"}, params[:method]) %>
      <%= button_tag type: "submit", class: "btn btn-outline-secondary" do %>
        <i class="fa-solid fa-magnifying-glass"></i> 検索
      <% end %>
    </div>
  <% end %>
<% end %>