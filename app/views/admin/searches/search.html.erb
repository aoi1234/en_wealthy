<div style="flex:4;">
  <% if @model == 'user' %>
    <h3>"<%= @content %>"ユーザーの検索結果</h3>
    <% if @records.exists? %>
        <%= render 'admin/users/index', users: @records %>
    <% else %>
    　　<p>一致するユーザーが存在しません</p>
  　<% end %>
  <% elsif @model == 'post' %>
    <h3>"<%= @content %>"を含むポストの検索結果</h3>
    <% if @records.exists? %>
        <%= render 'admin/posts/posts', posts: @records %>
    <% else %>
    　　<p>一致するポストが存在しません</p>
  　<% end %>
  <% end %>
</div>