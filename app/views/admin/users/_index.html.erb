<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>プロフ<br>画像</th>
      <th>アカウント名</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td class="align-middle"><%= image_tag user.get_profile_image(50,50), class: "rounded-circle"; %></td>
        <td class="align-middle"><%= user.name %>
          <% if user.is_celebrity %>
            <i class="fa-solid fa-circle-check" style="color: #17a2b8;"></i>
          <% end %>
        </td>
        <td class="align-middle">フォロー数: <%= user.followings.count %></td>
        <td class="align-middle">フォロワー数: <%= user.followers.count %></td>
        <td class="align-middle"><%= link_to "プロフィール画面へ", admin_user_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>