<% @posts.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%#= image_tag post_image.user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to admin_post_path(post.id), class: "text-dark" do %>
              <strong><i class="far fa-flag"></i><span> <%= post.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">本文：<%= post.body %></p>
          <p class="card-text">業界：<%= post.industry %></p>
          <p class="card-text">カテゴリー：<%= post.category %></p>
          <span><i class="fas fa-user"></i> By <%= link_to post.user.name, user_path(post.user) %> ｜ </span>
          <span><i class="fa-solid fa-comment"></i> <%= link_to "#{post.post_comments.count} 件", post_path(post.id), class: "text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
<% end %>
